{
  "tests": [
    {
      "name": "Test successful superadmin login",
      "method": "POST",
      "path": "/",
      "body": {
        "username": "superadmin",
        "password": "admin123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "token": "string",
        "user": {
          "id": "number",
          "username": "string",
          "role": "super_admin"
        }
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Test failed login with wrong password",
      "method": "POST",
      "path": "/",
      "body": {
        "username": "superadmin",
        "password": "wrongpassword"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Test missing credentials",
      "method": "POST",
      "path": "/",
      "body": {},
      "expectedStatus": 400,
      "expectedBody": {
        "error": "username and password required"
      }
    }
  ]
}
